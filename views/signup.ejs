<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("__bootstrap.ejs") %>
    <title>Update Details</title>
</head>
<body style="background-color: cornsilk; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">
    <%# include("__header.ejs")%>
    <div class="container d-flex justify-content-center align-content-center mt-5" style="min-height: 400px;">
        <div class="form" style="width: 40%; border: 1px solid crimson;">
            <div class="bg-danger text-center p-1 text-white">
                <small style="font-weight: bolder; font-size: 20px;">SIGN UP</small>
            </div>
            <form action="/user/signup" method="post" class="p-4">
                <div class="mt-1">
                    <label><b>Enter Name: </b></label>
                    <input type="text" name="username" class="form-control" placeholder="Enter your name" required>
                </div>
                <div class="mt-3">
                    <label><b>Enter Email: </b></label>
                    <input onblur="checkEmail(this)" type="email" name="email" class="form-control" placeholder="Enter your email" required>
                    <small id="emailError"></small>
                </div>  
                <div class="mt-3">
                    <label><b>Enter Password: </b></label>
                    <input type="password" name="password" class="form-control" placeholder="Enter your password" required>
                </div>
                <div class="d-flex justify-content-center align-items-center mt-3">
                    <button class="btn btn-danger" style="font-weight: bolder; width: 40%; font-size: 18px;">Sign Up</button>
                </div>
                <div class="text-center mt-3">
                    <p>Already have an Account? <a href="signin" class="text-danger">Sign In</a></p>
                </div>
            </form>
        </div>
    </div>
    <script>
        function checkEmail(email){
            let email = email.value;
            let xhttp = new XMLHttpRequest();
            xhttp.open("GET",`http://localhost:2301/user/check-user/${email}`,true);
            xhttp.send();
            xhttp.onreadystatechange = function(){
                if(xhttp.readyState == 4){
                    let response = xhttp.responseText;
                    response = JSON.parse(response);
                    let emailError = document.getElementById("emailError");
                    response.status ? emailError.setAttribute("class","text-danger") : emailError.setAttribute("class","text-success");
                    email.innerText = response.message;
                }
            }
        }
    </script>
</body>
</html>